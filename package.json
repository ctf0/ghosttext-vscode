{
    "name": "ghosttext",
    "displayName": "GhostText",
    "description": "Use your text editor to write in your browser. Everything you type in the editor will be instantly updated in the browser (and vice versa).",
    "version": "1.1.0",
    "publisher": "tokoph",
    "icon": "images/gticon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/jtokoph/ghosttext-vscode.git"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.enableGhostText"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.enableGhostText",
                "title": "Enable GhostText"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ghost Text",
            "properties": {
                "ghosttext.default_syntax": {
                    "type": "string",
                    "default": "TODO",
                    "description": "default syntax"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "nodejs-websocket": "^1.7.1",
        "tmp": "0.0.31"
    }
}
